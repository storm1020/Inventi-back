package br.com.fiap.inventi.beans;
/**
 * Classe com os atributos, getters/setters e regras de negócio do objeto Usuário.
 * */

public class Usuario {

	private int codigo;
	private String nome;
	private String login;
	private String senha;
	private TipoUsuario tipoUsuario;
	
	public Usuario(){
		
	}
	
	public Usuario(int pCodigo,
			String pNome,
			String pLogin,
			String pSenha){
		setCodigo(pCodigo);
		setNome(pNome);
		setLogin(pLogin);
		setSenha(pSenha);		
	}
	
	public String getAll(){
		return "Código Usuário: " + codigo + "\n" +
				"Nome Usuário: " + nome + "\n" +
				"Login Usuário: " + login + "\n" +
				"Senha Usuário:" + senha + 
				"Tipo Usuário:" + tipoUsuario.getAll();
	}
	
	public void setAll(int pCodigo,
	String pNome,
	String pLogin,
	String pSenha){
		setCodigo(pCodigo);
		setNome(pNome);
		setLogin(pLogin);
		setSenha(pSenha);
	}
	
	public int getCodigo() {
		return codigo;
	}
	public void setCodigo(int codigo) {
		this.codigo = codigo;
	}
	public String getNome() {
		return nome;
	}
	public void setNome(String nome) {
		this.nome = nome;
	}
	public String getLogin() {
		return login;
	}
	public void setLogin(String login) {
		this.login = login;
	}
	public String getSenha() {
		return senha;
	}
	public void setSenha(String senha) {
		this.senha = senha;
	}
	
}
